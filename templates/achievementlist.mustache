<h2>{{heading}}</h2>
{{#canmanage}}
 <a href="{{newurl}}" class="btn btn-primary mb-3">{{create_new}}</a>
{{/canmanage}}
{{#achievements}}
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="">
                <tr>
                    <th>Student Name</th>
                    <th>Title</th>
                    {{#canmanage}} <th>Actions</th> {{/canmanage}}
                </tr>
            </thead>
            <tbody>
                {{#list}}
                    <tr>
                        <td><a href="{{show_url}}" >{{user_name}}</a></td>
                        <td>{{title}}</td>
                        {{#canmanage}}
                            <td>
                                <a href="{{editurl}}" class="btn btn-sm btn-secondary">Edit</a>
                                <a href="{{deleteurl}}" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        {{/canmanage}}
                    </tr>
                {{/list}}
            </tbody>
        </table>
    </div>
{{/achievements}}

{{^achievements}}
    <div>No events found.</div>
{{/achievements}}