<h2>{{heading}}</h2>

 <a href="{{newurl}}" class="btn btn-primary mb-3">{{create_new}}</a>

{{#achievements}}
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="">
                <tr>
                    <th>Student Name</th>
                    <th>Title</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#list}}
                    <tr>
                        <td><a href="{{show_url}}" >{{user_name}}</a></td>
                        <td>{{title}}</td>
                        <td>
                            <a href="{{editurl}}" class="btn btn-sm btn-secondary">Edit</a>
                            <a href="{{deleteurl}}" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                {{/list}}
            </tbody>
        </table>
    </div>
{{/achievements}}

{{^achievements}}
    <div>No events found.</div>
{{/achievements}}